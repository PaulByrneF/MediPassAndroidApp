<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/welMessageTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:elevation="50dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Dashboard"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/emr_icon"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/emr_icon2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emr_titleTV"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="190dp"
        android:elevation="20dp"
        android:gravity="center"
        android:text="Medical Records"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/emr_icon" />

    <ImageView
        android:id="@+id/presc_icon"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="35dp"
        android:src="@drawable/presc_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/presc_titleTV"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="190dp"
        android:elevation="20dp"
        android:gravity="center"
        android:text="Prescriptions"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/presc_icon" />

    <ImageView
        android:id="@+id/mydetails_icon"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/profile_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/emr_icon" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="200dp"
        android:elevation="20dp"
        android:gravity="center"
        android:text="My Details"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mydetails_icon" />

    <ImageView
        android:id="@+id/doctor_icon"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/doctor_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/presc_icon" />

    <TextView
        android:id="@+id/doctor_titleTV"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="200dp"
        android:elevation="20dp"
        android:gravity="center"
        android:text="Doctors"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/doctor_icon" />

    <ImageView
        android:id="@+id/mediring_icon"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/medikey_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/mydetails_icon" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="200dp"
        android:elevation="20dp"
        android:gravity="center"
        android:text="My MediKey"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mediring_icon" />

    <Button
        android:id="@+id/emergBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Emergency"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>